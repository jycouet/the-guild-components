{
  "name": "the-guild-components-monorepo",
  "private": true,
  "scripts": {
    "start": "start-storybook -p 6008",
    "build": "tsc && rollup -c",
    "storybook": "build-storybook -o dist-storybook",
    "next:dev": "concurrently -r \"tsc --watch\" \"rollup -c --watch\" \"yarn --cwd examples/nextjs dev\"",
    "next:build": "cd examples/nextjs && yarn build && yarn start",
    "prettier": "prettier --ignore-path .gitignore --write --list-different .",
    "prettier:check": "prettier --ignore-path .gitignore --check .",
    "lint": "eslint --ignore-path .gitignore .",
    "type-check": "tsc",
    "type-check:watch": "tsc --watch",
    "prepare": "husky install",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "release:canary": "(node scripts/canary-release.js && yarn build && yarn changeset publish --tag alpha) || echo Skipping Canary...",
    "zip": "yarn build && yarn --cwd packages/components pack"
  },
  "devDependencies": {
    "@babel/core": "7.17.4",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@changesets/cli": "2.22.0",
    "@emotion/babel-plugin-jsx-pragmatic": "0.1.5",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-image": "2.1.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@storybook/addon-actions": "6.4.19",
    "@storybook/addon-essentials": "6.4.19",
    "@storybook/addon-links": "6.4.19",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "6.4.19",
    "@types/react": "17.0.43",
    "@types/react-instantsearch-core": "6.10.7",
    "@types/react-instantsearch-dom": "6.12.2",
    "@types/react-paginate": "7.1.1",
    "@types/validator": "13.7.1",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "concurrently": "7.0.0",
    "eslint": "8.12.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-tailwindcss": "3.5.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "postcss": "8.4.12",
    "prettier": "2.6.1",
    "prettier-plugin-sh": "^0.8.2",
    "prettier-plugin-tailwindcss": "0.1.8",
    "pretty-quick": "3.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup": "2.61.1",
    "rollup-plugin-auto-external": "2.0.0",
    "rollup-plugin-bundle-size": "1.0.3",
    "rollup-plugin-copy": "3.4.0",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.3"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "babelMacros": {
    "twin": {
      "preset": "emotion",
      "config": "tailwind.config.cjs"
    }
  },
  "browserslist": "> 0.25%, not dead",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "pretty-quick --staged",
      "eslint"
    ],
    "yarn.lock": [
      "npx yarn-deduplicate"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "resolutions": {
    "stylis": "4.0.13"
  },
  "dependencies": {
    "clsx": "1.1.1"
  }
}
